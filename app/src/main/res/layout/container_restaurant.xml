        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_marginBottom="@dimen/general_margin"
            android:background="@color/colorPrimary"/>
        <!-- INFORMATION: Name, Rating, Timing, Status, Phone, Direction, web page -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/restaurantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="McDonald's" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/restaurantRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="3.5" />
                <com.like.LikeButton
                    android:id="@+id/starButtton"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:liked="true"
                    app:icon_size="25dp"
                    app:icon_type="star" />
                <TextView
                    android:id="@+id/restaurantRetingNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(455)" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_general_margin"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/restaurantDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lun-Vie" />
                <TextView
                    android:id="@+id/restaurantHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12am - 10pm" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/restaurantStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open"
                    android:textColor="@color/statusOpen"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_general_margin"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_general_margin"
                android:textColor="@color/primaryText"
                android:text="@string/phone"/>
            <TextView
                android:id="@+id/restaurantPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+591 68055274"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_general_margin"
                android:textColor="@color/primaryText"
                android:text="@string/address"/>
            <TextView
                android:id="@+id/restaurantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av. Velarde esquina Juan de Garay Santa Cruz"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_general_margin"
                android:textColor="@color/primaryText"
                android:text="@string/webPage"/>
            <TextView
                android:id="@+id/restaurantWebPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLink"
                android:text="http://fuzzyapps.com/"/>
        </LinearLayout>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/half_general_margin"
            android:layout_marginBottom="@dimen/general_margin"
            android:id="@+id/map"
            map:uiZoomGestures="false"
            map:uiRotateGestures="false"
            map:uiScrollGestures="false"
            map:uiTiltGestures="false"
            android:name="com.google.android.gms.maps.MapFragment"/>
        <!-- TABS: 1.Food, 2. Map, 3.Promotions, 4. Branches -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">
            <android.support.design.widget.TabLayout
                android:id="@+id/restaurantOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabMode="fixed"/>
            <FrameLayout
                android:id="@+id/restaurantFrame"
                android:layout_width="match_parent"
                android:layout_height="500dp" />
        </LinearLayout>
